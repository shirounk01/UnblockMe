{% extends 'base.html.twig' %}

{% block title %}LicensePlate index{% endblock %}

{% block body %}
    <h1>LicensePlate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>License_plate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for license_plate in license_plates %}
            <tr>
                <td>{{ license_plate.id }}</td>
                <td>{{ license_plate.licensePlate }}</td>
                <td>
                    <a href="{{ path('license_plate_show', {'id': license_plate.id}) }}">show</a>
                    <a href="{{ path('license_plate_edit', {'id': license_plate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button onclick="location.href='/license/plate/new'" type="button">Add car!</button>
{% endblock %}
